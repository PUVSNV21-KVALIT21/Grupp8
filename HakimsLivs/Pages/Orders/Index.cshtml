@page
@model HakimsLivs.Pages.Orders.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Varukorg</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                Artikel
            </th>
            <th>
                Antal
            </th>
            <th>
                Á-pris
            </th>
            <th>
                Totalt
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model.ProductsInOrderList)
        {
            <tr>
                <td>
                    @product.ProductName
                </td>
                <td>
                    @product.Amount
                </td>
                <td>
                    @product.PricePerItem
                </td>
                <td>
                    @product.TotalItemPrice
                </td>
                <td>
                    <a href="#decrease">-</a> / <a href="#increase">+</a>
                </td>
                <td>
                    <a href="#remove">Ta Bort</a>
                </td>
            </tr>
        }

</table>