@page
@model HakimsLivs.Pages.Orders.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Varukorg</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                Artikel
            </th>
            <th>
                Antal
            </th>
            <th>
                Á-pris
            </th>
            <th>
                Totalt
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model.ProductsInOrderList)
        {
            <tr>
                <td>
                    @product.ProductName
                </td>
                <td>
                    @product.Amount
                </td>
                <td>
                    @product.PricePerItem
                </td>
                <td>
                    @product.TotalItemPrice
                </td>
                <td>
                    @*<a href="#decrease">-</a> / <a href="#increase">+</a>*@
                    <form asp-page-handler="Increase" method="post">
                        <button name="@product.ProductID" type="submit">+</button>
                    </form>
                    <form asp-page-handler="Decrease" method="post">
                        <button name="@product.ProductID" type="submit">-</button>
                    </form>
                </td>
                <td>
                    <form asp-page-handler="Remove" method="post">
                        <button name="@product.ProductID" type="submit">Ta bort</button></form>
                </td>
            </tr>
        }

        <tr>
            <td></td>
            <td></td>
            <td>
                Summa:
            </td>
            <td>
                @Model.totalPrice
            </td>

        </tr>
        
        </tbody>
</table>