@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Hakims Livs</title>
    <link rel="stylesheet" href="Foundation.css">
</head>

<body>
    <form>
        <div id="middle">
            <div id="sticky">
                @foreach (var category in Model.Categories)
            {
                <button id="categorybutton" type="submit">@category</button>
            }
            </div>
            <div id="base">
                <div id="productfoundation">
                    <div id="toppro">
                        <p>Image</p>
                        <p>30:-</p>
                        <p style="font-size: 28px">Banan</p>
                        <p style="font-size: 20px;">500 g</p>
                    </div>

                    <div id="quantity">
                        <button class="buttonpro" type="submit">+</button>
                        <p>0</p>
                        <button class="buttonpro" type="submit">-</button>
                    </div>
                </div>
            </div>
        </div>

        <div id="top">
            <a id="title" href="/Index">
                Hakims Livs
            </a>
            <input type="text" id="start" placeholder="Search" autofocus>
            <button type="submit" asp-page="/Login">Login</button>
            <button type="submit" asp-page="/Checkout">Checkout</button>
            <a class="button" href="/Products">Products</a>
        </div>
    </form>
    <footer id="bottom">
        <p>Hakim Livs info</p>
    </footer>
</body>
</html>
